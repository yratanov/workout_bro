<div data-controller="modal">
  <button type="button" class="<%= pill_classes %>" data-action="click->modal#open">
    <% if compact? %>
      <span><%= label %></span>
    <% else %>
      <span class="flex justify-between gap-2">
        <span class="truncate"><%= label %></span>
        <span class="text-xs opacity-75 whitespace-nowrap"><%= helpers.seconds_to_human(@workout.time_in_seconds) %></span>
      </span>
    <% end %>
  </button>

  <%= render ModalComponent.new(title: modal_title, size: "md") do %>
    <div class="p-6 overflow-y-auto min-h-0 flex-1">
      <div class="mb-4 text-slate-300">
        Duration: <span class="font-semibold"><%= helpers.seconds_to_human(@workout.time_in_seconds) %></span>
      </div>

      <% if @workout.strength? %>
        <div class="space-y-3">
          <% @workout.workout_sets.each do |set| %>
            <div class="bg-slate-700 rounded p-3">
              <div class="font-medium mb-2"><%= set.exercise.name %></div>
              <div class="flex flex-wrap gap-2">
                <% set.workout_reps.each do |rep| %>
                  <span class="text-sm bg-slate-600 px-2 py-1 rounded">
                    <%= rep.reps %> x <%= rep.weight %>kg
                    <% if rep.band.present? %>
                      (<%= rep.band %>)
                    <% end %>
                  </span>
                <% end %>
              </div>
            </div>
          <% end %>
          <% if @workout.workout_sets.empty? %>
            <p class="text-slate-400">No exercises recorded</p>
          <% end %>
        </div>
      <% else %>
        <div class="space-y-4">
          <div class="grid grid-cols-2 gap-4">
            <div class="bg-slate-700 rounded p-4">
              <p class="text-slate-400 text-sm">Distance</p>
              <p class="text-2xl font-semibold"><%= (@workout.distance.to_f / 1000).round(2) %> km</p>
            </div>
            <div class="bg-slate-700 rounded p-4">
              <p class="text-slate-400 text-sm">Average Pace</p>
              <p class="text-2xl font-semibold"><%= helpers.run_pace(@workout) %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <div class="p-6 border-t border-slate-700 flex justify-between flex-shrink-0">
      <button type="button" data-action="click->modal#close" class="px-4 py-2 bg-slate-600 hover:bg-slate-500 rounded">
        Close
      </button>
      <%= button_to workout_path,
        method: :delete,
        data: { turbo_confirm: "Are you sure you want to delete this workout?" },
        class: "px-4 py-2 bg-red-600 hover:bg-red-500 rounded text-white cursor-pointer" do %>
        Delete
      <% end %>
    </div>
  <% end %>
</div>
