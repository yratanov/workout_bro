<div class="w-full">
  <%# Month navigation header %>
  <div class="flex items-center justify-between mb-3 sm:mb-4">
    <%= link_to prev_month_path,
        data: { turbo_frame: "calendar" },
        class: "p-1.5 sm:p-2 hover:bg-slate-600 rounded" do %>
      <%= render(IconChevronLeftComponent.new) %>
    <% end %>

    <h2 class="text-lg sm:text-xl font-bold text-indigo-200"><%= month_title %></h2>

    <%= link_to next_month_path,
        data: { turbo_frame: "calendar" },
        class: "p-1.5 sm:p-2 hover:bg-slate-600 rounded" do %>
      <%= render(IconChevronRightComponent.new) %>
    <% end %>
  </div>

  <%# Day name headers %>
  <div class="grid grid-cols-7 gap-0.5 sm:gap-1 mb-0.5 sm:mb-1">
    <% day_names_short.zip(day_names_full).each do |short, full| %>
      <div class="text-center text-xs sm:text-sm font-medium text-slate-400 py-1 sm:py-2">
        <span class="sm:hidden"><%= short %></span>
        <span class="hidden sm:inline"><%= full %></span>
      </div>
    <% end %>
  </div>

  <%# Calendar grid %>
  <div class="grid grid-cols-7 gap-0.5 sm:gap-1">
    <% weeks.each do |week| %>
      <% week.each do |date| %>
        <%= render(CalendarDayComponent.new(
          date: date,
          current_month: @current_date,
          workouts: @workouts_by_date[date] || []
        )) %>
      <% end %>
    <% end %>
  </div>
</div>
