<div class="bg-slate-800 rounded-lg p-8 text-center">
  <% if emoji.present? %>
    <div class="text-4xl mb-3"><%= emoji %></div>
  <% elsif icon.present? %>
    <div class="text-slate-500 mb-3"><%= helpers.icon icon, size: "w-12 h-12 mx-auto" %></div>
  <% end %>
  <% if title.present? %>
    <h3 class="font-semibold text-lg mb-2"><%= title %></h3>
  <% end %>
  <p class="text-slate-400"><%= message %></p>
  <% if hint.present? %>
    <p class="text-slate-500 text-sm mt-2"><%= hint %></p>
  <% end %>
  <% if content.present? %>
    <div class="mt-4"><%= content %></div>
  <% end %>
</div>
