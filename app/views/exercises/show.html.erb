<% content_for :title, "Showing exercise" %>

<div>
  <% if notice.present? %>
    <p
      class="
        py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block
      "
      id="notice"
    ><%= notice %></p>
  <% end %>

  <h1 class="font-bold text-2xl"><%= @exercise.name %></h1>

  <%= render @exercise %>

  <div class="flex gap-2">
    <%= button "Edit",
    route: edit_exercise_path(@exercise),
    type: "link",
    style: "outlined" %>
    <%= button "Back to exercises",
    route: exercises_path,
    type: "link",
    style: "outlined" %>
    <%= button "Destroy",
    route: @exercise,
    type: "button",
    style: "danger",
    method: :delete,
    data: {
      turbo_confirm: "Are you sure?",
    } %>
  </div>
</div>
