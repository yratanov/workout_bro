<% content_for :title, @exercise.name %>

<div class="w-full max-w-3xl">
  <div class="flex items-center justify-between mb-6">
    <%= link_to exercises_path, class: "text-slate-400 hover:text-slate-300 flex items-center gap-2" do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
      </svg>
      Back to exercises
    <% end %>
    <%= link_to "Edit", edit_exercise_path(@exercise), class: "text-blue-400 hover:text-blue-300" %>
  </div>

  <div class="bg-slate-800 rounded-lg p-6 mb-6">
    <h1 class="font-bold text-3xl mb-4"><%= @exercise.name %></h1>

    <% if @exercise.muscles.present? %>
      <p class="text-slate-400 mb-4"><%= @exercise.muscles %></p>
    <% end %>

    <div class="flex gap-2">
      <% if @exercise.with_weights %>
        <span class="inline-flex items-center gap-1 px-3 py-1 bg-blue-600/20 text-blue-400 rounded-full text-sm">
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
            <path d="M3 10a1 1 0 011-1h1V6a1 1 0 112 0v3h6V6a1 1 0 112 0v3h1a1 1 0 110 2h-1v3a1 1 0 11-2 0v-3H7v3a1 1 0 11-2 0v-3H4a1 1 0 01-1-1z"/>
          </svg>
          Weights
        </span>
      <% end %>
      <% if @exercise.with_band %>
        <span class="inline-flex items-center gap-1 px-3 py-1 bg-purple-600/20 text-purple-400 rounded-full text-sm">
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd"/>
          </svg>
          Band
        </span>
      <% end %>
    </div>
  </div>

  <% if @workout_sets.any? %>
    <% max_weight = @workout_sets.flat_map(&:workout_reps).compact.map(&:weight).compact.max %>
    <% total_sets = @workout_sets.size %>

    <div class="grid grid-cols-2 gap-4 mb-6">
      <div class="bg-slate-800 rounded-lg p-4">
        <div class="text-slate-400 text-sm mb-1">Total Sets</div>
        <div class="text-2xl font-bold"><%= total_sets %></div>
      </div>
      <% if max_weight && max_weight > 0 %>
        <div class="bg-slate-800 rounded-lg p-4">
          <div class="text-slate-400 text-sm mb-1">Max Weight</div>
          <div class="text-2xl font-bold"><%= max_weight %>KG</div>
        </div>
      <% else %>
        <div class="bg-slate-800 rounded-lg p-4">
          <div class="text-slate-400 text-sm mb-1">Last Performed</div>
          <div class="text-2xl font-bold"><%= @workout_sets.first.created_at.strftime("%b %d") %></div>
        </div>
      <% end %>
    </div>

    <h2 class="text-lg font-semibold mb-4">Previous Results</h2>

    <div class="space-y-3">
      <% @workout_sets.group_by { |ws| ws.created_at.to_date }.each do |date, sets| %>
        <div class="bg-slate-800 rounded-lg overflow-hidden">
          <div class="bg-slate-700/50 px-4 py-2 border-b border-slate-700">
            <div class="flex items-center justify-between">
              <span class="font-medium"><%= date.strftime("%A, %B %d") %></span>
              <span class="text-slate-400 text-sm"><%= pluralize(sets.size, "set") %></span>
            </div>
          </div>

          <div class="divide-y divide-slate-700">
            <% sets.each do |workout_set| %>
              <div class="px-4 py-3">
                <div class="flex items-center justify-between mb-2">
                  <div class="flex items-center gap-2 text-sm text-slate-400">
                    <span><%= workout_set.created_at.strftime("%H:%M") %></span>
                    <span class="text-slate-600">|</span>
                    <span>
                      <%= Time.at(workout_set.ended_at - workout_set.started_at).utc.strftime("%M:%S") %> duration
                    </span>
                    <% if workout_set.workout&.workout_routine_day %>
                      <span class="text-slate-600">|</span>
                      <span class="text-blue-400"><%= workout_set.workout.workout_routine_day.name %></span>
                    <% end %>
                  </div>
                </div>

                <div class="flex flex-wrap gap-2">
                  <% workout_set.workout_reps.each do |rep| %>
                    <div class="inline-flex items-center gap-1 px-2 py-1 bg-slate-700 rounded text-sm">
                      <span class="font-medium"><%= rep.reps %></span>
                      <% if rep.weight %>
                        <span class="text-slate-400">x</span>
                        <span class="text-green-400"><%= rep.weight %>kg</span>
                      <% end %>
                      <% if rep.band %>
                        <span class="text-slate-400">x</span>
                        <span class="text-purple-400"><%= rep.band %></span>
                      <% end %>
                    </div>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="bg-slate-800 rounded-lg p-8 text-center">
      <div class="text-4xl mb-3">ðŸ“Š</div>
      <h3 class="font-semibold text-lg mb-2">No history yet</h3>
      <p class="text-slate-400">Complete a workout with this exercise to see your results here.</p>
    </div>
  <% end %>
</div>
