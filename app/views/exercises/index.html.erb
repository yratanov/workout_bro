<% content_for :title, t(".title") %>

<div class="w-full max-w-3xl">
  <%= page_header title: t(".title") do %>
    <%= button t(".new_exercise"),
    route: new_exercise_path,
    style: "primary",
    type: "link" %>
  <% end %>

  <% if @exercises.any? %>
    <div id="exercises" class="space-y-6">
      <% @exercises.group_by(&:muscle).each do |muscle, exercises| %>
        <div>
          <div class="flex items-center gap-2 mb-3">
            <% if muscle.present? %>
              <span class="text-slate-400"><%= muscle_icon(muscle, size: "w-6 h-6") %></span>
              <h2 class="text-lg font-semibold text-slate-300"><%= muscle.human_name %></h2>
            <% else %>
              <h2 class="text-lg font-semibold text-slate-300"><%= t(".other") %></h2>
            <% end %>
          </div>
          <div class="space-y-2">
            <% exercises.each do |exercise| %>
              <%= link_to exercise, class: "block bg-slate-800 rounded-lg p-4 hover:bg-slate-700/80 transition-colors" do %>
                <div class="flex items-center justify-between">
                  <h3 class="font-medium text-lg"><%= exercise.name %></h3>
                  <div class="flex gap-2">
                    <% if exercise.with_weights %>
                      <span
                        class="
                          inline-flex items-center px-2 py-1 bg-blue-600/20 text-blue-400 rounded-full
                          text-xs
                        "
                      >
                        <%= t(".weights") %>
                      </span>
                    <% end %>
                    <% if exercise.with_band %>
                      <span
                        class="
                          inline-flex items-center px-2 py-1 bg-purple-600/20 text-purple-400 rounded-full
                          text-xs
                        "
                      >
                        <%= t(".band") %>
                      </span>
                    <% end %>
                  </div>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <%= empty_state emoji: "ðŸ’ª", message: t(".no_exercises") %>
  <% end %>
</div>
