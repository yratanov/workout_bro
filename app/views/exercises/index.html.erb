<% content_for :title, t(".title") %>

<div class="w-full max-w-3xl">
  <div class="flex justify-between items-center mb-6">
    <h1 class="font-bold text-3xl"><%= t(".title") %></h1>
    <%= button t(".new_exercise"), route: new_exercise_path, style: "primary", type: "link" %>
  </div>

  <% if @exercises.any? %>
    <div id="exercises" class="space-y-6">
      <% @exercises.group_by(&:muscle).each do |muscle, exercises| %>
        <div>
          <div class="flex items-center gap-2 mb-3">
            <% if muscle.present? %>
              <span class="text-slate-400"><%= muscle_icon(muscle, size: "w-6 h-6") %></span>
              <h2 class="text-lg font-semibold text-slate-300"><%= muscle.human_name %></h2>
            <% else %>
              <h2 class="text-lg font-semibold text-slate-300"><%= t(".other") %></h2>
            <% end %>
          </div>
          <div class="space-y-2">
            <% exercises.each do |exercise| %>
              <%= link_to exercise, class: "block bg-slate-800 rounded-lg p-4 hover:bg-slate-700/80 transition-colors" do %>
                <div class="flex items-center justify-between">
                  <h3 class="font-medium text-lg"><%= exercise.name %></h3>
                  <div class="flex gap-2">
                    <% if exercise.with_weights %>
                      <span class="inline-flex items-center px-2 py-1 bg-blue-600/20 text-blue-400 rounded-full text-xs">
                        <%= t(".weights") %>
                      </span>
                    <% end %>
                    <% if exercise.with_band %>
                      <span class="inline-flex items-center px-2 py-1 bg-purple-600/20 text-purple-400 rounded-full text-xs">
                        <%= t(".band") %>
                      </span>
                    <% end %>
                  </div>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="bg-slate-800 rounded-lg p-8 text-center">
      <div class="text-4xl mb-3">ðŸ’ª</div>
      <p class="text-slate-400"><%= t(".no_exercises") %></p>
    </div>
  <% end %>
</div>
