<% content_for :title, t(".title") %>

<div class="w-full max-w-3xl">
  <%= page_header title: t(".title") do %>
    <%= button t(".new_routine"),
    route: new_workout_routine_path,
    style: "primary",
    type: "link" %>
  <% end %>

  <% if @workout_routines.any? %>
    <div id="workout_routines" class="space-y-3">
      <% @workout_routines.each do |workout_routine| %>
        <%= link_to workout_routine, class: "block bg-slate-800 rounded-lg p-4 hover:bg-slate-700/80 transition-colors" do %>
          <div class="flex items-center justify-between">
            <div class="flex items-center gap-3">
              <span class="text-slate-400"><%= icon "dumbbell", size: "w-5 h-5" %></span>
              <h3 class="font-medium text-lg"><%= workout_routine.name %></h3>
            </div>
            <div class="flex items-center gap-3">
              <span
                class="
                  inline-flex items-center px-2.5 py-1 bg-slate-700 text-slate-300 rounded-full
                  text-sm
                "
              >
                <%= workout_routine.workout_routine_days.size %>
                <%= t(".days") %>
              </span>
              <span class="text-slate-500"><%= icon "chevron_right", size: "w-5 h-5" %></span>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <%= empty_state icon: "dumbbell", message: t(".no_routines") do %>
      <%= button t(".new_routine"),
      route: new_workout_routine_path,
      style: "primary",
      type: "link" %>
    <% end %>
  <% end %>
</div>
