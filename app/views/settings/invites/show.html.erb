<% content_for :title, t(".title") %>

<div class="w-full max-w-4xl">
  <h1 class="font-bold text-2xl mb-4 sm:mb-6"><%= t(".title") %></h1>

  <div class="flex flex-col sm:flex-row gap-4 sm:gap-8">
    <%= render SettingsMenuComponent.new(current_page: :invites, current_user: current_user) %>

    <div class="flex-1 min-w-0">
      <div class="bg-slate-800 rounded-lg p-4 sm:p-6">
        <div class="flex justify-between items-start mb-4">
          <div>
            <h2 class="font-semibold text-lg"><%= t(".title") %></h2>
            <p class="text-slate-400 text-sm mt-1"><%= t(".description") %></p>
          </div>
          <%= button_to t(".create_invite"), settings_invites_path, method: :post, class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg transition-colors" %>
        </div>

        <% if @invites.any? %>
          <div class="overflow-x-auto">
            <table class="w-full">
              <thead>
                <tr class="text-left text-slate-400 text-sm border-b border-slate-700">
                  <th class="pb-3 font-medium w-36"><%= t(".table.invite_link") %></th>
                  <th class="pb-3 font-medium"><%= t(".table.used_by") %></th>
                  <th class="pb-3 font-medium"><%= t(".table.used_at") %></th>
                  <th class="pb-3 font-medium"><%= t(".table.actions") %></th>
                </tr>
              </thead>
              <tbody class="divide-y divide-slate-700">
                <% @invites.each do |invite| %>
                  <tr>
                    <td class="py-3">
                      <button
                        type="button"
                        class="text-blue-400 hover:text-blue-300 font-mono text-sm cursor-pointer inline-block w-32 text-left"
                        data-controller="clipboard"
                        data-clipboard-text-value="<%= use_invite_url(token: invite.token) %>"
                        data-action="click->clipboard#copy"
                        title="<%= t(".copy_link") %>"
                      >
                        <%= truncate(invite.token, length: 16) %>
                      </button>
                    </td>
                    <td class="py-3 text-sm">
                      <% if invite.used_by_user %>
                        <%= invite.used_by_user.email_address %>
                      <% else %>
                        <span class="text-slate-500"><%= t(".not_used") %></span>
                      <% end %>
                    </td>
                    <td class="py-3 text-sm text-slate-400">
                      <% if invite.used_at %>
                        <%= l(invite.used_at, format: :short) %>
                      <% else %>
                        <span class="text-slate-500">-</span>
                      <% end %>
                    </td>
                    <td class="py-3">
                      <%= button_to invite_settings_invites_path(invite),
                          method: :delete,
                          class: "text-red-400 hover:text-red-300 transition-colors",
                          data: { turbo_confirm: t("shared.confirmations.are_you_sure") } do %>
                        <%= icon("trash", size: "w-5 h-5") %>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
          <p class="text-slate-400 text-center py-8"><%= t(".no_invites") %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>
