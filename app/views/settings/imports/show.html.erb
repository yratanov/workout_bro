<% content_for :title, t(".title") %>

<div class="w-full max-w-4xl">
  <h1 class="font-bold text-2xl mb-4 sm:mb-6"><%= t("settings.profile.show.title") %></h1>

  <div class="flex flex-col sm:flex-row gap-4 sm:gap-8">
    <%= render SettingsMenuComponent.new(
      current_page: :imports,
      current_user: current_user,
    ) %>

    <div class="flex-1 min-w-0">
      <div class="bg-slate-800 rounded-lg p-4 sm:p-6">
        <h2 class="font-semibold text-lg mb-4"><%= t(".import_workouts") %></h2>
        <p class="text-slate-400 text-sm mb-6"><%= t(".description") %></p>

        <%= app_form_with model: @workout_import, url: settings_imports_path, method: :post, class: "space-y-6" do |form| %>
          <% if @workout_import.errors.any? %>
            <div class="bg-red-900/50 border border-red-500 rounded-lg p-4">
              <p class="text-red-400 text-sm"><%= @workout_import.errors.full_messages.join(", ") %></p>
            </div>
          <% end %>
          <div>
            <%= form.label :file,
                       t(".file_label"),
                       class: "block text-sm font-medium text-slate-300 mb-2" %>
            <%= form.file_field :file,
                            accept: ".csv",
                            class:
                              "block w-full text-sm text-slate-400 file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:text-sm file:font-semibold file:bg-emerald-600 file:text-white hover:file:bg-emerald-500 file:cursor-pointer cursor-pointer",
                            required: true,
                            data: {
                              action: "change->import-upload#setFilename",
                            } %>
            <p class="mt-2 text-xs text-slate-500"><%= t(".file_hint") %></p>
          </div>
          <%= form.hidden_field :original_filename, id: "original_filename" %>
          <div class="pt-2">
            <%= button text: t(".upload_button"), type: "submit", style: "primary" %>
          </div>
        <% end %>

        <div class="mt-6 pt-6 border-t border-slate-700">
          <h3 class="font-semibold mb-4"><%= t(".supported_formats") %></h3>
          <ul class="text-sm text-slate-400 space-y-2">
            <li><strong><%= t(".format_custom") %>:</strong>
              <%= t(".format_custom_desc") %></li>
            <li><strong><%= t(".format_strong") %>:</strong>
              <%= t(".format_strong_desc") %></li>
            <li><strong><%= t(".format_hevy") %>:</strong>
              <%= t(".format_hevy_desc") %></li>
            <li><strong><%= t(".format_fitnotes") %>:</strong>
              <%= t(".format_fitnotes_desc") %></li>
          </ul>
        </div>
      </div>

      <% if @workout_imports.any? %>
        <div class="bg-slate-800 rounded-lg p-4 sm:p-6 mt-4">
          <h2 class="font-semibold text-lg mb-4"><%= t(".import_history") %></h2>

          <div class="space-y-3">
            <% @workout_imports.each do |import| %>
              <div
                class="bg-slate-700/50 rounded-lg p-4"
                data-controller="<%= import.pending? || import.in_progress? ? 'import-status' : '' %>"
                data-import-status-id-value="<%= import.id %>"
                data-import-status-url-value="<%= status_settings_imports_path(import.id) %>"
              >
                <div class="flex items-center justify-between mb-2">
                  <span class="text-sm font-medium">
                    <%= import.original_filename.presence ||
                      (import.file.attached? && import.file.filename.to_s) || t(".unknown_file") %>
                  </span>
                  <div class="flex items-center gap-2">
                    <span data-import-status-target="badge">
                      <%= render_import_status_badge(import) %>
                    </span>
                    <% if import.completed? && import.imported_count > 0 %>
                      <%= button_to import_settings_imports_path(import.id),
                          method: :delete,
                          class: "text-xs text-red-400 hover:text-red-300 transition",
                          data: { turbo_confirm: t(".revert_confirm", count: import.imported_count) } do %>
                        <%= t(".revert_button") %>
                      <% end %>
                    <% end %>
                  </div>
                </div>
                <div class="flex items-center justify-between text-xs text-slate-400">
                  <div>
                    <span><%= l(import.created_at, format: :short) %></span>
                    <% if import.completed? %>
                      <span class="ml-4" data-import-status-target="stats">
                        <%= t(".stats", imported: import.imported_count, skipped: import.skipped_count) %>
                      </span>
                    <% elsif import.failed? && import.error_details.present? %>
                      <span class="ml-4 text-red-400" data-import-status-target="error">
                        <%= import.error_details["message"] %>
                      </span>
                    <% elsif import.pending? || import.in_progress? %>
                      <span class="ml-4" data-import-status-target="stats">
                        <span class="inline-block animate-pulse"><%= t(".processing") %></span>
                      </span>
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
