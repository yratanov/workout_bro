<% content_for :title, t(".title") %>

<div class="w-full max-w-4xl">
  <h1 class="font-bold text-2xl mb-4 sm:mb-6"><%= t("settings.profile.show.title") %></h1>

  <div class="flex flex-col sm:flex-row gap-4 sm:gap-8">
    <%= render SettingsMenuComponent.new(current_page: :garmin) %>

    <div class="flex-1 min-w-0">
      <div class="bg-slate-800 rounded-lg p-4 sm:p-6">
        <h2 class="font-semibold text-lg mb-4"><%= t(".garmin_sync") %></h2>
        <p class="text-slate-400 text-sm mb-6"><%= t(".description") %></p>

        <%= app_form_with model: @credential, url: settings_garmin_path, method: :patch, class: "space-y-6" do |form| %>
          <div>
            <%= form.label :username, t(".username_label"), class: "block text-sm font-medium text-slate-300 mb-2" %>
            <%= form.text_field :username,
                             autocomplete: "username",
                             placeholder: t(".username_placeholder") %>
            <% if @credential.errors[:username].any? %>
              <p class="mt-1 text-sm text-red-400"><%= @credential.errors[:username].first %></p>
            <% end %>
          </div>

          <div>
            <%= form.label :password, t(".password_label"), class: "block text-sm font-medium text-slate-300 mb-2" %>
            <%= form.password_field :password,
                                 autocomplete: "new-password",
                                 placeholder: t(".password_placeholder") %>
            <% if @credential.encrypted_password.present? %>
              <p class="mt-1 text-sm text-slate-400"><%= t(".password_hint") %></p>
            <% end %>
            <% if @credential.errors[:encrypted_password].any? %>
              <p class="mt-1 text-sm text-red-400"><%= @credential.errors[:encrypted_password].first %></p>
            <% end %>
          </div>

          <div class="pt-2">
            <%= button text: t("shared.buttons.save"), type: "submit", style: "primary" %>
          </div>
        <% end %>

        <% if @credential.persisted? && @credential.username.present? && @credential.encrypted_password.present? %>
          <div class="mt-6 pt-6 border-t border-slate-700">
            <h3 class="font-semibold text-lg mb-2"><%= t(".sync_section") %></h3>
            <p class="text-slate-400 text-sm mb-4"><%= t(".sync_description") %></p>
            <%= button_to sync_settings_garmin_path, method: :post, class: "inline-flex" do %>
              <span class="bg-emerald-600 hover:bg-emerald-500 text-white font-semibold rounded-lg px-6 py-2.5 transition shadow-lg hover:shadow-emerald-500/25">
                <%= t(".sync_button") %>
              </span>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
