<% content_for :title, t(".title") %>

<div class="w-full max-w-4xl">
  <h1 class="font-bold text-2xl mb-4 sm:mb-6"><%= t(".title") %></h1>

  <div class="flex flex-col sm:flex-row gap-4 sm:gap-8">
    <%= render SettingsMenuComponent.new(current_page: :profile) %>

    <div class="flex-1 min-w-0">
      <div class="bg-slate-800 rounded-lg p-4 sm:p-6">
        <h2 class="font-semibold text-lg mb-4"><%= t(".profile_info") %></h2>

        <%= app_form_with model: @user, url: settings_profile_path, method: :patch, class: "space-y-6" do |form| %>
          <div>
            <%= form.label :email_address, t(".email_label"), class: "block text-sm font-medium text-slate-300 mb-2" %>
            <%= form.email_field :email_address,
                             required: true,
                             autocomplete: "email",
                             placeholder: t(".email_placeholder") %>
            <% if @user.errors[:email_address].any? %>
              <p class="mt-1 text-sm text-red-400"><%= @user.errors[:email_address].first %></p>
            <% end %>
          </div>

          <div class="pt-2">
            <%= button text: t(".save"), type: "submit", style: "primary" %>
          </div>
        <% end %>
      </div>

      <div class="bg-slate-800 rounded-lg p-4 sm:p-6 mt-4">
        <h2 class="font-semibold text-lg mb-4"><%= t(".language_section") %></h2>

        <%= app_form_with model: @user, url: settings_profile_path, method: :patch, class: "space-y-6" do |form| %>
          <div>
            <%= form.label :locale, t(".language_label"), class: "block text-sm font-medium text-slate-300 mb-2" %>
            <%= form.select :locale,
                            User::AVAILABLE_LOCALES.map { |l| [t("setup.language.locales.#{l}"), l] },
                            { selected: @user.locale || "en" },
                            class: "bg-slate-700 border border-slate-600 rounded-lg px-4 py-3 text-white w-full focus:outline-none focus:border-blue-500 focus:ring-1 focus:ring-blue-500" %>
          </div>

          <div class="pt-2">
            <%= button text: t(".save"), type: "submit", style: "primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
