<% content_for :title, "Workouts" %>

<div class="w-[400px] self-center">
  <% if notice.present? %>
    <p
      class="
        py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block
      "
      id="notice"
    ><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center mb-5">
    <h1 class="text-2xl">Workouts</h1>
    <%= button "Start workout", style: "primary", type: "link", route: new_workout_path %>
  </div>

  <div id="workouts" class="space-y-2">
    <% if @workouts.any? %>
      <% @grouped_by_week.each_with_index do |(day, workouts), i| %>
        <div class=" bg-slate-700 rounded-lg <%= i > 0 ? "mt-5" : "" %> ">
          <div class=" py-3 px-4 text-indigo-200 bg-slate-800 font-bold rounded-t-lg ">
            Week
            <%= @grouped_by_week.size - i %>
            (<%= day.strftime("%d %B") %>
            -
            <%= day.end_of_week.strftime("%d %B") %>)
          </div>
          <% grouped_by_day = workouts.group_by { |w| w.started_at.strftime("%A") } %>
          <% grouped_by_day.each_with_index do |(week_day, day_workouts), index| %>
            <div
              class="py-4 <%= index < grouped_by_day.size - 1 ? "border-b border-slate-600" : "" %>"
            >
              <% day_workouts.each_with_index do |workout, i| %>
                <div class="px-4">
                  <div class="mb-2 font-bold">
                    <% if i == 0 %>
                      <%= workout.started_at.strftime("%A") %>
                    <% end %>
                  </div>
                  <div class="flex flex-wrap lg:flex-nowrap gap-8 items-center">
                    <div class="flex-grow">
                      <%= button (
                        if workout.cardio?
                          workout.workout_type.humanize
                        else
                          workout.workout_routine_day&.name
                        end
                      ),
                      style: "link",
                      type: "link",
                      route: workout_path(workout),
                      data: {
                        turbo_prefetch: false,
                      } %>
                    </div>
                    <div class="text-right w-20">
                      <% if workout.cardio? %>
                        <%= (workout.distance.to_f / 1000).round(2) %>
                        km
                      <% else %>
                        <%= workout.workout_sets.size %>
                        sets
                      <% end %>
                    </div>

                    <div class="w-15 text-center">
                      <%= render(
                        TimerComponent.new(
                          started_at: workout.started_at,
                          ended_at: workout.ended_at,
                        ),
                      ) %>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      <% end %>
    <% else %>
      <p class="text-center my-10">No workouts found.</p>
    <% end %>
  </div>
</div>
