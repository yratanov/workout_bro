<div class="bg-slate-700/50 rounded-lg px-4 py-3 mt-2">
  <%= app_form_with(model: superset_exercise, url: superset_superset_exercises_path(superset_exercise.superset), class: "contents") do |form| %>
    <div class="flex gap-3 items-center">
      <div class="flex-1">
        <%= form.collection_select(
          :exercise_id,
          Current
            .user
            .exercises
            .order(:name)
            .without(superset_exercise.superset.exercises),
          :id,
          :name,
          { prompt: t(".select_exercise") },
          {
            class:
              "w-full bg-slate-800 border border-slate-600 text-white rounded-lg px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500",
          },
        ) %>
      </div>
      <%= button text: t("shared.buttons.add"),
      type: "submit",
      style: "primary",
      class: "px-4 py-2 text-sm" %>
      <%= button route: superset_path(superset_exercise.superset),
          type: "link",
          style: "link",
          class: "text-sm",
          data: { turbo_frame: "new_superset_exercise_form" } do %>
        <%= t("shared.buttons.cancel") %>
      <% end %>
    </div>
  <% end %>
</div>
