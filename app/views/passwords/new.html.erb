<div class="w-full max-w-md">
  <div class="bg-slate-800 rounded-2xl shadow-2xl p-8 border border-slate-700">
    <h1 class="font-bold text-2xl text-white mb-6"><%= t(".title") %></h1>

    <%= app_form_with url: passwords_path, class: "space-y-6" do |form| %>
      <%= form.input :email_address,
                 as: :email,
                 label: t(".email_label"),
                 margin: "",
                 input_html: {
                   required: true,
                   autofocus: true,
                   autocomplete: "username",
                   placeholder: t(".email_placeholder"),
                   value: params[:email_address],
                 } %>
      <div>
        <%= form.submit t(".submit") %>
      </div>
    <% end %>
  </div>
</div>
