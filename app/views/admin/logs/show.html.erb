<% content_for :title, t(".title") %>

<div class="w-full max-w-4xl">
  <h1 class="font-bold text-2xl mb-4 sm:mb-6"><%= t(".title") %></h1>

  <div class="flex flex-col sm:flex-row gap-4 sm:gap-8">
    <%= render AdminMenuComponent.new(current_page: :logs) %>

    <div class="flex-1 min-w-0">
      <div class="bg-slate-800 rounded-lg p-4 sm:p-6">
        <h2 class="font-semibold text-lg mb-4"><%= t(".error_logs") %></h2>
        <p class="text-slate-400 text-sm mb-6"><%= t(".description") %></p>

        <% if @error_logs.any? %>
          <div class="space-y-3">
            <% @error_logs.each do |log| %>
              <% ctx = log.context || {} %>
              <div class="bg-slate-700/50 rounded-lg p-3 sm:p-4">
                <div class="flex flex-col gap-2">
                  <div class="flex flex-col sm:flex-row sm:items-start sm:justify-between gap-2">
                    <div class="flex-1 min-w-0">
                      <div class="flex flex-wrap items-center gap-2 mb-1">
                        <span class="font-medium text-slate-200"><%= log.error_class %></span>
                        <span class="text-xs bg-red-500/20 text-red-400 px-2 py-0.5 rounded"><%= t(".severities.#{log.severity}") %></span>
                        <span class="text-xs bg-slate-600/50 text-slate-400 px-2 py-0.5 rounded"><%= log.source %></span>
                      </div>
                      <p class="text-sm text-slate-400 break-words"><%= log.message %></p>
                    </div>
                    <span class="text-xs text-slate-500 whitespace-nowrap">
                      <%= l(log.created_at, format: :short) %>
                    </span>
                  </div>

                  <% if ctx["controller"].present? || ctx["path"].present? %>
                    <div class="flex flex-wrap items-center gap-2 text-xs">
                      <% if ctx["method"].present? && ctx["path"].present? %>
                        <span class="bg-slate-600/30 text-slate-300 px-2 py-0.5 rounded font-mono">
                          <%= ctx["method"] %>
                          <%= ctx["path"] %>
                        </span>
                      <% end %>
                      <% if ctx["controller"].present? && ctx["action"].present? %>
                        <span class="text-slate-500">
                          <%= ctx["controller"] %>#<%= ctx["action"] %>
                        </span>
                      <% end %>
                      <% if ctx["ip"].present? %>
                        <span class="text-slate-500"><%= ctx["ip"] %></span>
                      <% end %>
                    </div>
                  <% end %>

                  <% if ctx["job_class"].present? %>
                    <div class="flex flex-wrap items-center gap-2 text-xs">
                      <span class="bg-slate-600/30 text-slate-300 px-2 py-0.5 rounded font-mono">
                        <%= ctx["job_class"] %>
                      </span>
                      <% if ctx["queue_name"].present? %>
                        <span class="text-slate-500">queue:
                          <%= ctx["queue_name"] %></span>
                      <% end %>
                    </div>
                  <% end %>

                  <% if log.backtrace.present? %>
                    <details>
                      <summary class="text-xs text-slate-500 cursor-pointer hover:text-slate-400"><%= t(".show_backtrace") %></summary>
                      <pre
                        class="
                          mt-2 text-xs text-slate-500 max-w-full overflow-auto bg-slate-800 p-2 rounded
                          max-h-48
                        "
                      ><%= Array(log.backtrace).join("\n") %></pre>
                    </details>
                  <% end %>
                  <% if ctx["params"].present? %>
                    <details>
                      <summary class="text-xs text-slate-500 cursor-pointer hover:text-slate-400"><%= t(".show_params") %></summary>
                      <pre
                        class="
                          mt-2 text-xs text-slate-500 overflow-auto bg-slate-800 p-2 rounded max-h-48
                        "
                      ><%= JSON.pretty_generate(ctx["params"]) %></pre>
                    </details>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <p class="text-slate-500 text-center py-8"><%= t(".no_logs") %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>
