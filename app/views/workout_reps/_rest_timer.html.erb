<div
  id="rest-timer"
  data-controller="rest-timer"
  data-rest-timer-duration-value="<%= duration %>"
  data-rest-timer-notification-title-value="<%= t(".notification_title") %>"
  data-rest-timer-notification-body-value="<%= t(".notification_body") %>"
  class="
    fixed bottom-24 left-4 right-4 bg-zinc-800 rounded-2xl p-4 shadow-2xl border
    border-zinc-700 z-50 overflow-hidden
  "
>
  <div class="absolute inset-x-0 bottom-0 h-1 bg-zinc-700">
    <div
      data-rest-timer-target="progressBar"
      class="h-full bg-blue-500 transition-all duration-100"
      style="width: 100%"
    ></div>
  </div>

  <div class="flex items-center justify-between">
    <div
      class="text-4xl font-mono font-bold text-white"
      data-rest-timer-target="display"
    >
      <%= "#{duration / 60}:#{(duration % 60).to_s.rjust(2, "0")}" %>
    </div>

    <div class="flex gap-2">
      <button
        type="button"
        data-action="click->rest-timer#addTime"
        data-rest-timer-seconds-param="-30"
        class="
          px-3 py-2 bg-zinc-700 hover:bg-zinc-600 rounded-lg text-white font-medium
        "
      >
        -30s
      </button>
      <button
        type="button"
        data-action="click->rest-timer#addTime"
        data-rest-timer-seconds-param="30"
        class="
          px-3 py-2 bg-zinc-700 hover:bg-zinc-600 rounded-lg text-white font-medium
        "
      >
        +30s
      </button>
      <button
        type="button"
        data-action="click->rest-timer#dismiss"
        class="
          px-3 py-2 bg-zinc-700 hover:bg-zinc-600 rounded-lg text-zinc-400
        "
      >
        âœ•
      </button>
    </div>
  </div>
</div>
