<%= form_with(model: workout_rep, class: "contents") do |form| %>
  <% if workout_rep.errors.any? %>
    <div class="bg-red-900/50 text-red-200 px-2 py-1 text-xs rounded mb-1">
      <%= workout_rep.errors.full_messages.join(", ") %>
    </div>
  <% end %>
  <%= form.hidden_field :workout_set_id %>
  <div class="flex flex-col gap-1">
    <%= form.select(
      :reps,
      (1..40).map { |r| ["#{r} x", r] },
      {},
      { class: "border border-slate-500 bg-slate-600 text-white px-2 py-2 rounded" },
    ) %>
    <% if workout_rep.workout_set.exercise.with_weights %>
      <%= form.select(
        :weight,
        (0..40).step(2.5).map { |w| ["#{w}KG", w] },
        {},
        { class: "border border-slate-500 bg-slate-600 text-white px-2 py-2 rounded" },
      ) %>
    <% end %>
    <% if workout_rep.workout_set.exercise.with_band %>
      <%= form.select(
        :band,
        [["None", nil]] + WorkoutRep::BANDS.map { |b| [b.humanize, b] },
        {},
        { class: "border border-slate-500 bg-slate-600 text-white px-2 py-2 rounded" },
      ) %>
    <% end %>
    <%= button text: "Add", type: "submit", style: "primary" %>
  </div>
<% end %>
