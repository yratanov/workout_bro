#!/bin/bash -e

# Enable jemalloc for reduced memory usage and latency.
if [ -z "${LD_PRELOAD+x}" ]; then
    LD_PRELOAD=$(find /usr/lib -name libjemalloc.so.2 -print -quit)
    export LD_PRELOAD
fi

# Auto-generate secrets if not provided
# Store in persistent storage so they survive container restarts
STORED_SECRET_PATH="/rails/storage/.secret_key_base"

# Ensure storage directory exists
mkdir -p /rails/storage

# Load or generate SECRET_KEY_BASE (used instead of credentials.yml.enc)
if [ -z "${SECRET_KEY_BASE}" ]; then
  if [ -f "$STORED_SECRET_PATH" ]; then
    echo "Loading existing secrets from storage..."
    export SECRET_KEY_BASE=$(cat "$STORED_SECRET_PATH")
  elif [ "${1}" == "bin/jobs" ]; then
    # Jobs container: wait for web to generate secrets
    echo "Waiting for secrets to be generated by web container..."
    for i in {1..30}; do
      if [ -f "$STORED_SECRET_PATH" ]; then
        export SECRET_KEY_BASE=$(cat "$STORED_SECRET_PATH")
        echo "Secrets loaded."
        break
      fi
      sleep 1
    done
    if [ -z "${SECRET_KEY_BASE}" ]; then
      echo "ERROR: Secrets not found after 30 seconds. Is the web container running?"
      exit 1
    fi
  else
    # Web container: generate new secrets
    echo "Generating new secrets..."
    export SECRET_KEY_BASE=$(openssl rand -hex 64)
    echo -n "$SECRET_KEY_BASE" > "$STORED_SECRET_PATH"
    chmod 600 "$STORED_SECRET_PATH"

    echo "=============================================="
    echo "New secrets generated and saved to storage."
    echo "Your data is encrypted with these secrets."
    echo "Back up the storage volume to preserve your data."
    echo "=============================================="
  fi
fi

# If running the rails server then create or migrate existing database
if [ "${@: -2:1}" == "./bin/rails" ] && [ "${@: -1:1}" == "server" ]; then
  DB_FILE="/rails/storage/production.sqlite3"
  # Check if database file exists and has tables (using sqlite3 directly)
  if [ -f "$DB_FILE" ] && sqlite3 "$DB_FILE" "SELECT COUNT(*) FROM sqlite_master WHERE type='table' AND name NOT LIKE 'sqlite_%';" 2>/dev/null | grep -qv "^0$"; then
    echo "Database exists, running migrations..."
    ./bin/rails db:migrate
  else
    echo "Creating database..."
    ./bin/rails db:create 2>/dev/null || true
    ./bin/rails db:schema:load
  fi
fi

# If running jobs, wait for database to be ready
if [ "${1}" == "bin/jobs" ]; then
  echo "Waiting for database to be ready..."
  for i in {1..60}; do
    if ./bin/rails runner "ActiveRecord::Base.connection.tables.any?" 2>/dev/null | grep -q "true"; then
      echo "Database ready."
      break
    fi
    sleep 1
  done
fi

exec "${@}"
